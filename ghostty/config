font-family = "ProggyClean Nerd Font"
font-size = 18
theme = "Monokai Pro Spectrum"

# Bind alt/opt+backspace to wordwise backspace
keybind = alt+backspace=text:\x17

macos-titlebar-style = hidden
mouse-hide-while-typing = true

window-padding-x = 12
window-padding-y = 12

quick-terminal-position = center
quick-terminal-animation-duration = 0.1

# # Terminal Multiplexing
keybind = ctrl+g>h=goto_split:left
keybind = ctrl+g>j=goto_split:down
keybind = ctrl+g>k=goto_split:up
keybind = ctrl+g>l=goto_split:right
keybind = ctrl+g>`=toggle_split_zoom

keybind = ctrl+g>shift+backslash=new_split:right
keybind = ctrl+g>-=new_split:down

keybind = ctrl+g>n=next_tab
keybind = ctrl+g>p=previous_tab
keybind = ctrl+g>c=new_tab

keybind = ctrl+g>r=reload_config

keybind = ctrl+g>y=write_scrollback_file:open
keybind = ctrl+g>\=toggle_quick_terminal

# Session Management
shell-integration-features = no-title
